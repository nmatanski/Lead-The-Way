@model IEnumerable<LeadTheWay.GraphLayer.Map.Domain.Models.GraphMap>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


@if (Model == null)
{
    <h3>There are no maps in the DB.</h3>
}


<p>
    <a class="nav-link" asp-area="Admin" asp-controller="MapsManagement" asp-action="Create">Create New Map</a>
</p>
<div>
    <table class="table table-striped border">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GraphString)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GraphString)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>